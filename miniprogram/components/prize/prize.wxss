/* components/prize/prize.wxss */
.tips {
  position: absolute;
  top: 0;
  z-index: 1;
  width: 100%;
  padding: 10rpx 0;
  color: #fa5a2a;
  background-color: #fff;
  font-size: 28rpx;
  text-align: center;
  opacity: .95;
}
.prize-text {
  position: absolute;
  bottom: 0;
  width: 230rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background-color: #333333;
}
.prize_wp{
    margin: 10rpx 20rpx;
    margin-top: 30rpx;
    display: flex;
    flex-wrap: wrap;
  }
  .prize_wp .prize_item{
    width: 230rpx;
    height: 230rpx;
    margin: 0 10rpx 10rpx 0;
    color: #333333;
    background: #1E9FD9;
    box-sizing: border-box;
    border-radius: 16rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    overflow: hidden;
  }
  .prize_wp .prize_item.on{
    background: #e96528;
  }
  .prize_wp .prize_item image{
    display: block;
    width: 100%;
    height: 100%;
  }
  .prize_wp .prize_item:nth-child(3n){
    margin-right: 0;
  }
  .prize_wp .prize_item_btn{
    background: transparent;
  }
  .prize_wp .prize_item_btn text{
    display: block;
    text-align: center;
    color: #fff;
  }
  