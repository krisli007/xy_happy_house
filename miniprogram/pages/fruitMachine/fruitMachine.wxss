.title {
    padding: 16rpx 0;
    font-size: 36rpx;
    font-weight: 600;

}
.name-box,
.record-box {
    padding: 16rpx 32rpx 0;
    box-sizing: border-box;
}
.name-box {
    font-size: 30rpx;
    font-weight: 600;
}
.record-box {
    height: 540rpx;
}
.record-item {
    margin-top: 16rpx;
    padding: 16rpx 0;
    border-radius: 16rpx;
    background: #f5f5f5;
}
.content {
    font-size: 28rpx;
    color: #fa5a2a;
}
.name {
    font-size: 24rpx;
}
.time {
    font-size: 20rpx;
    color: #999
}