/**index.wxss**/

page {
  height: 100%;
}
.container {
  height: 100%;
}

.banner-swiper {
  width: 100%;
  height: 540rpx;
}
.banner-img {
  width: 100%;
}
.right-shot {
  padding: 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.count-box {
  background-color: #FFE5F0;
  padding: 60rpx 80rpx;
  border-radius: 16rpx;
  box-shadow: 0 0 10rpx 0rpx #D7B5BD;
}
.count-text {
  font-size: 40rpx;
  font-weight: 600;
  color: #363636;
}
.count-day {
  font-size: 120rpx;
  font-weight: 600;
  color: #f44336;
}
.count-time {
  font-size: 40rpx;
  font-weight: 600;
  color: #f44336;
}